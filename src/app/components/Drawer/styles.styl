@import '~app/assets/stylus'


$padding = 16px

.root
  position: fixed
  top: 0
  left: 0
  z-index: $zIndexDrawer
  width: 250px
  height: 100%
  min-height: 100%
  overflow-x: hidden
  overflow-y: auto
  -webkit-overflow-scrolling: touch
  padding: $padding
  transform: translateX(-100%)
  transition: transform 250ms ease-in-out
  background: $textColor
  color: $backgroundColor

.close
  position: absolute
  top: (48px / 2)
  right: $padding
  transform: translateY(-50%)
  cursor: pointer

.nav
  font-size: 24px
  text-transform: uppercase

  ul
    &:not(:first-child)
      padding-top: 16px

    &:not(:last-child)
      padding-bottom: 16px
      border-bottom: 1px solid $backgroundColor

  li
    &:not(:first-child)
      padding-top: 8px

    &:not(:last-child)
      padding-bottom: 8px

  a
    text-decoration: none

    &:hover
      color: $themeColor
