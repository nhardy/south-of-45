@require './index.styl'


$columWidth = 1100px

.column
  margin: 0 auto
  width: 100%
  propertyMargin('padding-left')
  propertyMargin('padding-right')
  max-width: ($columnWidth + (2 * $minMargin))

  +from($sml)
    max-width: ($columnWidth + (2 * $smlMargin))

  +from($med)
    max-width: ($columnWidth + (2 * $medMargin))

  +from($lge)
    max-width: ($columnWidth + (2 * $lgeMargin))

  +from($xlg)
    max-width: ($columnWidth + (2 * $xlgMargin))

.overlay
  color: $backgroundColor
  text-shadow: 1px 1px 16px $textColor

.fit
  height: 100%
  width: 100%
  object-fit: contain

.button
  display: inline-block
  padding: 0
  border: none
  background: transparent
  text-align: left
  font: inherit
  appearance: none
  cursor: pointer

  &:focus
    outline: none
